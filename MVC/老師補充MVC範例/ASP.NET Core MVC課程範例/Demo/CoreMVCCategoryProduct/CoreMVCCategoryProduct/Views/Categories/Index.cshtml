@model IEnumerable<CoreMVCCategoryProduct.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-success" asp-action="Create" class="btn btn-success">Create</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>編輯</th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a class="btn btn-success" asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a class="btn btn-success" asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a class="btn btn-success" asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <partial name="_ShowPhotoPartial" model="@item"/>
            </td>
        </tr>
}
    </tbody>
</table>
