@model IEnumerable<CustomerVM>

@{
    ViewData["Title"] = "檢視客戶最新訂單";
}

<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CompanyName)
            </th>
            <th>
                LatestOrder
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CompanyName)
            </td>
            <td>
                <partial name="_OrderVMPartial" model="@item.LatestOrder"/>
            </td>
        </tr>
}
    </tbody>
</table>
