<form asp-controller="Files" asp-action="Upload" enctype="multipart/form-data">
    <div class="container">
        <div class="mb-3">
            <label for="files" class="form-label">檔案上傳:</label>
            <input id="Files" name="files" type="file" class="form-control" multiple="multiple" />
            @Html.ValidationMessage("files", new {@class="text-danger"})
        </div>
        <div class="mb-3">
            <button type="submit" title="執行多檔上傳" class="btn btn-primary">
                <i class="fa fa-upload"></i> 上傳
            </button>
        </div>
    </div>
</form>
